<?xml version="1.0" encoding="UTF-8"?>

<web-app xmlns="http://java.sun.com/xml/ns/javaee"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
		  http://java.sun.com/xml/ns/javaee/web-app_4_0.xsd"
           version="4.0">

    <!--登录-->
    <servlet>
        <servlet-name>login</servlet-name>
        <servlet-class>com.lr.fiction.servlet.UserServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>login</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>


    <!--注册-->
    <servlet>
        <servlet-name>register</servlet-name>
        <servlet-class>com.lr.fiction.servlet.UserServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>register</servlet-name>
        <url-pattern>/register</url-pattern>
    </servlet-mapping>

    <!--登出-->
    <servlet>
        <servlet-name>logout</servlet-name>
        <servlet-class>com.lr.fiction.servlet.UserServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>logout</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>


    <!--图书列表-->
    <servlet>
        <servlet-name>showBook</servlet-name>
        <servlet-class>com.lr.fiction.servlet.BookServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>showBook</servlet-name>
        <url-pattern>/showBook</url-pattern>
    </servlet-mapping>

    <!--图书详情-->
    <servlet>
        <servlet-name>bookDetail</servlet-name>
        <servlet-class>com.lr.fiction.servlet.BookServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>bookDetail</servlet-name>
        <url-pattern>/bookDetail</url-pattern>
    </servlet-mapping>


    <!--小说内容详情-->
    <servlet>
        <servlet-name>chapter</servlet-name>
        <servlet-class>com.lr.fiction.servlet.BookServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>chapter</servlet-name>
        <url-pattern>/chapter</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>speak</servlet-name>
        <servlet-class>com.lr.fiction.servlet.BookServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>speak</servlet-name>
        <url-pattern>/speak</url-pattern>
    </servlet-mapping>

</web-app>
